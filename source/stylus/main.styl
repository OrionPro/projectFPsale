// Header
.header
	width: 100%
	height: 140px
	display: flex
	align-items: center
	background-color: #fff
	box-shadow: 0px 10px 25px 0px rgba(208, 208, 208,0.9)
	position: relative
	z-index: 10
	.row
		align-items: center
.header__logo
	display: inline-block
	margin-left: 15px
.header__nav
	display: inline-block
	position: relative
	margin-left: auto
	ul
		li
			list-style: none
			display: inline-block
			a
				margin-right: 30px
				color: $main_txt_color
				fz(16)
				position: relative
				text-decoration: none
				transition: .5s
				&:hover
					text-decoration: none
				&:active
					text-decoration: none
				&:focus
					text-decoration: none
				&:hover:after
					transform scale(1)
				&:after
					content: ""
					display: block
					position: absolute
					top: 23px
					left: 0
					width: 100%
					height: 2px
					transform scale(0)
					background-color: $main_color
					transition: .5s
