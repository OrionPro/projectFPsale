// Medium devices (tablets, less than 992px)
@media only screen and (max-width : 991px)
	/**/
	.header
		height: 100px
	.header__nav
		display: none
	.header__logo
		display: block
	.header__authorization
		margin-left: auto
	nav[canvas]
		display: block
	.info-blocks__item-txt-block
		margin-bottom: 20px
	.footer
		.select2-wrap
			width: 270px
	.main__update-proxy-list
		margin-bottom: 30px

// Small devices (landscape phones, less than 768px)
@media only screen and (max-width : 767px)
	
	/*Disable Animation on Mobile Devices*/
	.animated
		/*CSS transitions*/
		-o-transition-property: none !important
		-moz-transition-property: none !important
		-ms-transition-property: none !important
		-webkit-transition-property: none !important
		transition-property: none !important
		/*CSS transforms*/
		-o-transform: none !important
		-moz-transform: none !important
		-ms-transform: none !important
		-webkit-transform: none !important
		transform: none !important
		/*CSS animations*/
		-webkit-animation: none !important
		-moz-animation: none !important
		-o-animation: none !important
		-ms-animation: none !important
		animation: none !important
	.header
		height: 100%
		padding-bottom: 10px
		padding-top: 10px
		.row
			flex-direction: column
	.header__logo
		margin: 0 auto 10px
	.header__authorization
		margin: auto
	.header__title
		h1
			font-size: 30px
			margin-top: 40px
	.header__autorization-dropdown
		right calc(50% - 140px)
	[off-canvas*=left]
		width: 255px
	.react
		h2
			font-size: 20px
	.file_wrap
		input
			width: 80%
	.white-popup
		width: 100%
		padding: 20px 10px 20px 10px
		textarea
			min-height: 80px
	.main__setting-up-a-proxy-in-the-browser
		margin-bottom: 20px
	.main__proxy-list
		margin-bottom: 30px
	.main__table-wrap
		overflow: auto
		margin-bottom: 20px
		table
			width: 700px
	.main__scroll-table
		display: block
		position: absolute
		bottom: -15px
		left: 0
		i
			margin-left: 10px
			color $main_color
			animation arrow-right 0.5s infinite alternate
